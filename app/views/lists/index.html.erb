<div class="index-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.3)), url('https://source.unsplash.com/atsUqIm3wxo')">
  <div class="my-container">
    <h1>Save your favourite movies</h1>
    <%= link_to "Make your list now", new_list_path, class: "blue-btn" %>
  </div>
<!--   <div class="arrow"><i class="fas fa-arrow-circle-down"></i></div> -->
</div>
<div class="my-card-container">
  <h1>Lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      </div>
    <% end %>
  </div>
</div>

